<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabClick.Views.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LabClick - Login" />
            <!--<Label>Usuário</Label>-->
            <Entry x:Name="txtUsuario" Placeholder="Usuário"></Entry>
            <!--<Label>Senha</Label>-->
            <Entry x:Name="txtSenha" Placeholder="Senha" IsPassword="True"></Entry>
            <Button x:Name="btnEntrar" Clicked="btnEntrar_Clicked" Text="Entrar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
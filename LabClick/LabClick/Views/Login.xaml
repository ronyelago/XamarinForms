<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabClick.Views.Login"
             Title="LabClick - Login">


    <ContentPage.Content>
        <StackLayout BackgroundColor="LightSeaGreen">
            <StackLayout Spacing="20" HorizontalOptions="Center" WidthRequest="300">
                <Label Text="LabClick" 
                   Font="30"
                   Margin="50"
                   VerticalTextAlignment="Center" 
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>
                <Entry x:Name="txtUsuario" 
                   Placeholder="Usuário"/>
                <Entry x:Name="txtSenha" 
                   Placeholder="Senha" 
                   IsPassword="True"/>
                <Button x:Name="btnEntrar" 
                    Clicked="btnEntrar_Clicked"
                    Text="Entrar"
                    TextColor="White"
                    BackgroundColor="Gray"
                    HorizontalOptions="Center"
                    WidthRequest="100"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
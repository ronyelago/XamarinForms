<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabClick.Views.PhotoPage">
    
    <ContentPage.Content>
        <StackLayout>
            
            <Image x:Name="imgFoto" Aspect="AspectFit"/>
            <Button Text="Tirar Foto" Clicked="Button_Clicked"/>
            <Button x:Name="btnSelecionarImagem" Text="Salvar Imagem" Clicked="btnSelecionarImagem_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
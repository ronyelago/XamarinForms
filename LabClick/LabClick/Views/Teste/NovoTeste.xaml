<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabClick.Views.Teste.NovoTeste">

    <StackLayout>
        <!--title-->
        <StackLayout Padding="10" >
            <Label Font="30" 
                   Text="Teste - Zika Vírus"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>
        </StackLayout>
        <!--foto-->
        <StackLayout Orientation="Horizontal" 
                     HeightRequest="300" 
                     WidthRequest="150" 
                     BackgroundColor="LightGray"
                     Padding="20">
            <Image x:Name="imgFoto" 
                   Aspect="AspectFill" 
                   HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <!--buttons-->
        <StackLayout>
            <Button
                x:Name="btnQrCode"
                Text="Escanear QR Code"
                Clicked="BtnQrCode_ClickedAsync"/>
            <Button 
            x:Name="btnTeste"
            Text="Fotografar Teste"
            Clicked="BtnTeste_ClickedAsync"/>
            <Button 
            x:Name="BtnEnviarTeste"
            Text="Enviar Teste"
            Clicked="BtnEnviarTeste_ClickedAsync"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
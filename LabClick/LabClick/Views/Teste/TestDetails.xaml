<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabClick.Views.Teste.TestDetails"
             BackgroundImage="bgcadastro.jpg"
             Title="Detalhes do Exame">
    <StackLayout Orientation="Vertical"
                 Margin="25,25,25,25"
                 BackgroundColor="#80FF0000">
        <StackLayout BackgroundColor="LightGreen"
                     Orientation="Horizontal">
            <StackLayout Orientation="Vertical"
                         HorizontalOptions="StartAndExpand"
                         BackgroundColor="Purple">
                <Label Text="{Binding Exame.Nome, StringFormat='Exame - {0:F0} Vírus'}"
                       Font="20"
                       FontAttributes="Bold"
                       Margin="10,10,10,10"/>
                <Label Text="{Binding Paciente.Nome, StringFormat='Nome do Paciente: {0:F0}'}"/>
                <Label Text="{Binding Code}"/>
            </StackLayout>
            <StackLayout Orientation="Vertical"
                         HorizontalOptions="Start"
                         BackgroundColor="LightSkyBlue">
                <Label Text="{Binding DataCadastro}"/>
                <Label Text="{Binding Status}"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>
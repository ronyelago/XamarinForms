<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabClick.Views.Teste.DigitalizarTeste"
             BackgroundImage="bgcadastro.jpg"
             Title="Teste: Zika Vírus"
             x:Name="DigitalizarTesteBar">
    <StackLayout Orientation="Vertical">
        <StackLayout x:Name="pacienteStackLayout"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Margin="20,20,20,20">
            <Label x:Name="lblNomePaciente"
                       Font="20"
                       FontAttributes="Bold"/>
        </StackLayout>
        <!--foto-->
        <StackLayout Orientation="Vertical">
            <StackLayout x:Name="ImagemStackLayout"
                         Orientation="Vertical"
                         Margin="100,20,100,20">
                <Image x:Name="imgFoto"
                       Source="bgfotografar.jpg"
                       Aspect="AspectFit"
                       WidthRequest="900"
                       HeightRequest="500"
                       HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
            <StackLayout>
                <Button x:Name="btnTeste"
                    Text="Fotografar Teste"
                    BackgroundColor="#197A80"
                    WidthRequest="200" 
                    HeightRequest="40"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="10,10,10,10"
                    BorderRadius="10"
                    Clicked="BtnTeste_ClickedAsync"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>
        
        <!--QR Code-->
        <StackLayout x:Name="codeStackLayout"
                     Orientation="Vertical"
                     Margin="100,20,100,20">
            <StackLayout x:Name="codeLabelStackLayout"
                         Orientation="Horizontal"
                         Margin="10,10,10,20"
                         HorizontalOptions="Center"
                         WidthRequest="400" 
                         HeightRequest="100"
                         BackgroundColor="#BFF7F9F8">
                <Label x:Name="LblQrCode"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand"
                       Text="{Binding Code}"
                       Font="40"
                       FontAttributes="Bold"/>
            </StackLayout>
            
            <StackLayout x:Name="btnEscanearStack"
                         HorizontalOptions="Center"
                         Orientation="Horizontal"
                         Margin="10,10,10,20">
                <Button x:Name="BtnEscanear"
                        BackgroundColor="#197A80"
                        WidthRequest="200" 
                        HeightRequest="40"
                        TextColor="White"
                        FontAttributes="Bold"
                        Margin="10,10,10,10"
                        BorderRadius="10"
                        Clicked="BtnEscanear_ClickedAsync"
                        Text="Escanear QR-Code"/>
            </StackLayout>
            
        </StackLayout>
        <!--buttons-->
        <StackLayout x:Name="buttonsStackLayout"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Margin="10,100,10,10"
                     Orientation="Horizontal">
            <Button x:Name="BtnCancelar"
                    Text="Cancelar"
                    Clicked="BtnCancelar_Clicked"
                    BackgroundColor="Gray"
                    WidthRequest="200" 
                    HeightRequest="40"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="10,10,10,10"
                    BorderRadius="10"/>
            <Button x:Name="BtnEnviarTeste"
                    Text="Enviar Teste"
                    IsEnabled="False"
                    Clicked="BtnEnviarTeste_ClickedAsync"
                    BackgroundColor="#197A80"
                    WidthRequest="200" 
                    HeightRequest="40"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="10,10,10,10"
                    BorderRadius="10"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabClick.Views.ExamePages.NovoExamePage">

    <StackLayout>

        <StackLayout Orientation="Horizontal" HeightRequest="200" WidthRequest="150">
            <Image x:Name="imgFoto" Aspect="AspectFit" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout>
            <Button 
            x:Name="btnTeste"
            Text="Fotografar Teste"
            Clicked="BtnTeste_ClickedAsync"/>
            <Button 
            x:Name="BtnEnviarTeste"
            Text="Enviar Teste"
            Clicked="BtnEnviarTeste_ClickedAsync"/>
        </StackLayout>

    </StackLayout>
</ContentPage>